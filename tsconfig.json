{
  "compilerOptions": {
    /* Base Options */
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,

    /* Strict Type Checking */
    "strict": false, // Changed to false to be less strict
    "noImplicitAny": false, // Allow implicit any
    "strictNullChecks": false, // Don't check for null/undefined
    "noUnusedLocals": false, // Don't error on unused locals
    "noUnusedParameters": false, // Don't error on unused parameters
    "noFallthroughCasesInSwitch": true,

    /* Module Resolution */
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@/app": ["app/*"],
      "@config/*": ["config/*"],
      "@errorHandlers/*": ["errorHandlers/*"],
      "@helpers/*": ["helpers/*"],
      "@middlewares/*": ["middlewares/*"],
      "@models/*": ["models/*"],
      "@routes/*": ["routes/*"],
      "@utils/*": ["utils/*"],
      "@validators/*": ["validators/*"],
      "@types/*": ["types/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* Advanced */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "coverage", "**/*.test.ts"]
}
